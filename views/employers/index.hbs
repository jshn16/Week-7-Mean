<table class="table table-stripped table-hover">
    <thead>
        <th>name</th>
        <th>city</th>
        <th>email</th>
        <th>employees</th>
        <th>Actions</th>
    </thead>
    <tbody>
        {{#each employers}}
        <tr>
            <td>{{this.name}}</td>
            <td>{{this.city}}</td>
            <td>
                {{#if this.contactEmail}}
                <a href="mailto:{{this.contactEmail}}">
                    {{this.contactEmail}}
                </a>
                {{/if}}
            </td>
            <td>{{this.employee}}</td>
            <td >
                <a href="/employers/edit/{{this._id}}" title="edit">
                    <i class="fa-solid fa-pen-to-square"></i>
                </a>
                

                <a href="/employers/delete/{{this._id}}" onclick="return confirmDelete()"><i class="fa-solid fa-trash"></i></a>
                
            </td>
        </tr>
        {{/each}}
    </tbody>
    <h2>{{title}}</h2>

</table>